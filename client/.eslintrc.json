{
    /*
    *   Extends from https://github.com/facebook/create-react-app/blob/master/.eslintrc.json,
    *   which extends from, eslint:recommended.
    *   Rules in eslint:recommended have a check mark next to them on https://eslint.org/docs/rules/.
    */
    "extends": "react-app",
    "rules": {
		"require-await": "warn",
		"vars-on-top": "warn",
		"camelcase": "warn",
		"space-in-parens": ["warn", "never"],
		"arrow-parens": ["warn", "always"],
		"no-multiple-empty-lines": ["warn", {"max": 2}],
		"eol-last": ["warn", "never"],
		"no-await-in-loop": "error",
        "no-console": "off",
		"no-alert": "error",
		"no-eval": "error",
		"no-implicit-globals": "error",
		"no-new-func": "error",
		"no-new-wrappers": "error",
		"block-scoped-var": "error",
		"default-case": "error",
		"no-redeclare": "error",
		"semi": ["error", "always"],
        "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
		"jsx-quotes": ["error", "prefer-double"]
    }
}